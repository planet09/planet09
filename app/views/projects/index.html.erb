<h1>Listing Projects</h1>

<table>
  <thead>
    <tr>
      <th>P</th>
      <th>P name</th>
      <th>Description</th>
      <th>Start date</th>
      <th>End date</th>
      <th>Account</th>
      <th>Goal</th>
      <th>Price</th>
      <th>Body</th>
      <th>Option</th>
      <th>Rel project1 url</th>
      <th>Rel project2 url</th>
      <th>Comment</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @projects.each do |project| %>
      <tr>
        <td><%= project.p_id %></td>
        <td><%= project.p_name %></td>
        <td><%= project.description %></td>
        <td><%= project.start_date %></td>
        <td><%= project.end_date %></td>
        <td><%= project.account %></td>
        <td><%= project.goal %></td>
        <td><%= project.price %></td>
        <td><%= project.body %></td>
        <td><%= project.option %></td>
        <td><%= project.rel_project1_url %></td>
        <td><%= project.rel_project2_url %></td>
        <td><%= project.comment %></td>
        <td><%= project.user %></td>
        <td><%= link_to 'Show', project %></td>
        <td><%= link_to 'Edit', edit_project_path(project) %></td>
        <td><%= link_to 'Destroy', project, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

