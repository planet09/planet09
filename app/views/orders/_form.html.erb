
<%= simple_form_for(@order) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :o_id %>
    <%= f.input :del_addr %>
    <%= f.input :detail_addr %>
    <%= f.input :post_code %>
    <%= f.input :total_pay %>
    <%= f.input :del_pay %>
    <%= f.input :or_time %>
    <%= f.input :pay_time %>
    <%= f.input :amount %>
    <%= f.input :invoice_code %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
