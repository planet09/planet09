<p id="notice"><%= notice %></p>

<h1>Listing Posts Tags</h1>

<table>
  <thead>
    <tr>
      <th>Post</th>
      <th>Tag</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts_tags.each do |posts_tag| %>
      <tr>
        <td><%= posts_tag.post %></td>
        <td><%= posts_tag.tag %></td>
        <td><%= link_to 'Show', posts_tag %></td>
        <td><%= link_to 'Edit', edit_posts_tag_path(posts_tag) %></td>
        <td><%= link_to 'Destroy', posts_tag, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

